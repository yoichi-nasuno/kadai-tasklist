<h1>タスク一覧</h1>
<a>came to index.html</a>
<% if logged_in? %>
  <ul>
    <% @tasks.each do |task| %>
      <li><%= link_to task.id, task %> : <%= task.status %>:<%= task.content %></li>
    <% end %>
  </ul>

  <%= link_to '新規タスクの登録', new_task_path %>
<% else %>
    <div class="text-center">
      <h1>Welcome to the Tasklists NOT login</h1>
      <%= link_to 'Sign up now!', signup_path, class: 'btn btn-lg btn-primary' %>
    </div>
<% end %>