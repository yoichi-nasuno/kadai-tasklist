<%= form_with(model: message, local: true) do |f| %>
  
  <% if message.errors.any? %>
    <div id="error_explanation" %>
      <ul>
        <% message.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.label :status, 'ステイタス' %>
  <%= f.text_field :status %>
    
  <%= f.label :content, 'タスク' %>
  <%= f.text_field :content %>
    
  <%= f.submit '登録' %>
<% end %>
